# movie_ticket_system.py
print("=== MOVIE TICKET SYSTEM ===")

# Part A: Get inputs
day = input("Day (weekday/weekend): ").lower()
if day not in ["weekday", "weekdays", "weekend", "weekends"]:
    print("Invalid day input!")

customerType = input("Customer type (regular/student/senior): ").lower()
if customerType not in ["regular", "student", "senior"]:
    print("Invalid customer type!")


showingSchedule = int(input("Show time (hour in 24-hour format): "))
if showingSchedule < 9 or showingSchedule > 22:
    print("Invalid show time! Cinema operates from 9 to 22 only.")


tickets = int(input("Number of tickets: "))
if tickets <= 0:
    print("Invalid ticket count! Must be at least 1.")


# Part B: Base pricing 
if day in ["weekday", "weekdays"]:
    base_price = 200.0
else:
    base_price = 300.0

subtotal = base_price * tickets
total = subtotal

# Part C: Customer discounts
studentAppliedDiscount = 0.20
seniorAppliedDiscount = 0.30
matineeAppliedDiscount = 0.10
groupAppliedDiscount = 0.05  

appliedStudent = 0.0
appliedSenior = 0.0
appliedMatinee = 0.0
appliedGroup = 0.0

if customerType == "student":
    appliedStudent = total * studentAppliedDiscount
    total = total - appliedStudent

if customerType == "senior":
    appliedSenior = total * seniorAppliedDiscount
    total = total - appliedSenior

if showingSchedule < 12:
    appliedMatinee = total * matineeAppliedDiscount
    total = total - appliedMatinee

if tickets >= 5:
    appliedGroup = total * groupAppliedDiscount
    total = total - appliedGroup

# Part D: Display Receipt
print("\n--- RECEIPT ---")
print(f"Base price: {base_price:.2f} x {tickets} = {subtotal:.2f}")

if appliedStudent > 0:
    print(f"Student discount (20%): -{appliedStudent:.2f}")

if appliedStudent > 0:
    print(f"Senior discount (30%): -{appliedSenior:.2f}")

if appliedMatinee > 0:
    print(f"Matinee discount (10%): -{appliedMatinee:.2f}")

if appliedGroup > 0:
    print(f"Group discount (5%): -{appliedGroup:.2f}")

print("-------------------------")
print(f"TOTAL: {total:.2f}")
print("Thank you for your purchase!")
