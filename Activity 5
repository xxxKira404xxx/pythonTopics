# grade_calculator.py

score = float(input("Enter your score (0-100): "))

if score < 0 or score > 100:
    print("Invalid score!")
elif score >= 90:
    print("Grade: A - Excellent!")
elif score >= 80:
    print("Grade: B - Very Good!")
elif score >= 70:
    print("Grade: C - Good!")
elif score >= 60:
    print("Grade: D - Needs Improvement.")
else:
    print("Grade: F - Failed.")
